{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "src/registerServiceWorker.ts",
      "src/index.tsx"
    ]
  },
  "rules": {
    "curly": false,
    "interface-name": false,
    "no-any": true,
    "no-bitwise": false,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "typedef": [true, "call-signature"]
  }
}
